#!/bin/bash
# Sets up a working environment with CMake
if [[ "$(ls -A)" ]]; then
    echo 'Directory not empty'
    exit 1
fi

mkdir build
mkdir src

if [[ "$(pwd)" =~ ^.+/([^/]+)$ ]]; then
    proj="${BASH_REMATCH[1]}"
fi

cat << EOM > src/CMakeLists.txt
cmake_minimum_required(VERSION 3.22)
# Used by CSIF

project(${proj})
# Project Name and Version

# For YouCompleteMe
set(CMAKE_EXPORT_COMPILE_COMMANDS ON)

add_executable(#TODO)
EOM

git init
